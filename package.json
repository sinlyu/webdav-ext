{
  "name": "automate-webdav",
  "displayName": "WebDAV Extension",
  "description": "Lightning-fast WebDAV integration for VS Code with intelligent search and file indexing",
  "version": "0.1.0",
  "publisher": "Sinlyu",
  "engines": {
    "vscode": "^1.101.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sinlyu/automate-webdav.git"
  },
  "enabledApiProposals": [
    "fileSearchProvider",
    "textSearchProvider"
  ],
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "keywords": [
    "webdav",
    "file system",
    "search",
    "indexing",
    "performance",
    "remote files",
    "cloud storage"
  ],
  "homepage": "https://github.com/Sinlyu/automate-webdav#readme",
  "bugs": {
    "url": "https://github.com/Sinlyu/automate-webdav/issues"
  },
  "activationEvents": [],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "webdav",
          "title": "WebDAV",
          "icon": "$(cloud)"
        }
      ]
    },
    "views": {
      "webdav": [
        {
          "id": "webdavConnection",
          "name": "Connection",
          "type": "webview",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "automate-webdav.showDebug",
        "title": "Show WebDAV Debug Output"
      },
      {
        "command": "automate-webdav.refreshWorkspace",
        "title": "Refresh WebDAV Workspace",
        "icon": "$(refresh)"
      }
    ]
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "package-vscode-dev": "npm run package-web && vsce package --target web",
    "lint": "eslint src",
    "run-in-browser": "vscode-test-web --browserType=chromium --browserOption=--disable-web-security --browserOption=--disable-features=VizDisplayCompositor --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/assert": "^1.5.11",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^9.25.1",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "mocha": "^11.1.0",
    "typescript": "^5.8.3",
    "@vscode/test-web": "^0.0.69",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@types/webpack-env": "^1.18.8",
    "assert": "^2.1.0",
    "process": "^0.11.10"
  }
}
